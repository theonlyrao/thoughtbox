<h1>Links Index Page</h1>

<div class="link-control">
  <h4>Add New Link</h4>
  <form class='new-link-form' >
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="link_title" />
    </div>

    <div>
      <label for="address">Url:</label>
      <input type="text" id="address" name="address" placeholder="http://www.google.com"/>
    </div>

    <div class="button">
      <button type="button">Save link</button>
    </div>
  </form>


  <h4>Search Links</h4>
  <form class="search">
    <div>
      <label for="search"></label>
      <input type="text" id="search" name="link_search" placeholder="begin typing"/>
    </div>
  </form>



  <h4>Filter or Sort</h4>
  <div class="modify">
  <form>
    <input type="radio" name="read" value="true"> Read<br>
    <input type="radio" name="read" value="false"> Unread<br>
    <input type="radio" name="read" value="all" checked> All<br>  
  </form>

  <div id="alpha-button"><button type="button" id="alphabetize">Alphabetize</button></div>
  </div>
</div>


<section class="link-list">
</section>

