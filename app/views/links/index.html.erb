<div class="header">
    <%= link_to "Sign Out", sign_out_path if current_user %>
</div>

<h1>Links Index page</h1>

<form class='new-idea-form' >
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="link_title" />
    </div>

    <div>
        <label for="address">Url:</label>
        <input type="text" id="address" name="address" />
    </div>

    <div class="button">
        <button type="submit">Save link</button>
    </div>
</form>


<section class="idea-list">
</section>

<script>

$("#button").click(function(){
    var title = $("#title").val();
    var address = $("#address").val();

    $.ajax({
	type: "POST",
	url: "/api/v1/links",
	data: { link: { title: title, address: address } },
	dataType: "json",
	success: displayLink
    })    
})

let displayLink = function(link){
    $(".idea-list").prepend(link.title + ", " + link.address)
}

</script>
